<li class='film-card film-list__item' data-action='{{this.id}}' data-modal-open>

    <img class='film-card__img' src='https://image.tmdb.org/t/p/w500{{this.poster_path}}' alt='{{original_title}} '
        width='100%'
        onerror="this.onerror=null;this.src='https://ik.imagekit.io/tc8jxffbcvf/default-movie-portrait_EmJUj9Tda5wa.jpg?tr=fo-auto,di-';" />

    <div class='film-card__wrapper'>
        <h2 class='film-card__title'>{{this.title}} {{this.name}}</h2>
        <p class='film-card__description'>
            <span class='film-card__genres'>{{this.genre_ids}}</span>
            |
            <span class='film-card__release-date'>{{this.release_date}}</span>
        </p>
    </div>

</li>